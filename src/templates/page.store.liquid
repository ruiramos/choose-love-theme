<div class="inner-page grid">
  <div class="medium-up--one-twelfth grid__item" style="height:1px;"></div>
  <div class="medium-up--seven-twelfths one-whole grid__item">
    <div class="inner-page-content">
      <h2 class="page-title">{{ page.title }}</h2>
      <div class="rte grid">
        <div class="medium-up--two-thirds one-whole grid__item">
          <img src="{{ "store2.jpg"| asset_url }}" style="display: block; margin: 0"/>
        </div>
        <div class="medium-up--one-third one-whole grid__item">
          {{ page.content }}
        </div>
      </div>
    </div>
  </div>
  <div class="medium-up--three-twelfths one-whole grid__item">
    <div class="inner-page-content">
      <h2 class="page-title">Opening Hours</h2>
      <div class="rte" style="line-height: 1.5em">
        <table style="width: 100%;" class="table-opening-hours">
          <tr>
            <td>Monday</td>
            <td>10:00 - 20:00</td>
          </tr>
          <tr>
            <td>Tuesday</td>
            <td>10:00 - 20:00</td>
          </tr>
          <tr>
            <td>Wednesday</td>
            <td>10:00 - 20:00</td>
          </tr>
          <tr>
            <td>Thursday</td>
            <td>10:00 - 20:00</td>
          </tr>
          <tr>
            <td>Friday</td>
            <td>10:00 - 20:00</td>
          </tr>
          <tr>
            <td>Saturday</td>
            <td>10:00 - 20:00</td>
          </tr>
          <tr>
            <td>Sunday</td>
            <td>11:00 - 18:00</td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>
